<div class="row">
    <aside class="col-md-4">
        <section class="user_info">
            <h1>
                <%= gravatar_for @user %>
                <%= @user.name %>
            </h1>
            <%= link_to "フォロー", followings_user_path(@user) %>
            <%= link_to "フォロワー", followers_user_path(@user) %>
            <div class="profile-table">
                <table class="table">
                    <tbody>
                        <% if @user.introduction.present? %>
                            <tr>
                                <th>自己紹介</th>
                                <td><%= @user.introduction %></td>
                            </tr>
                        <% end %>
                        <% if @user.birthday.present? %>
                            <tr>
                                <th>誕生日</th>
                                <td><%= @user.birthday %></td>
                            </tr>
                        <% end %>
                            <tr>
                                <th>メールアドレス</th>
                                <td><%= @user.email %></td>
                            </tr>
                    </tbody>
                </table>
            </div>
            <% if @user == current_user %>
                <%= link_to "プロフィールの編集", edit_user_path, { :class => "btn btn-primary" } %>
            <% end %>
        </section>
    </aside>
    <div class="col-md-8">
        <% if @users.any? %>
            <h3>フォロー(<%= @users.count %>)</h3>
                    <ol class="followings">
                        <% @users.each do |user| %>
                            <li>
                                <%= link_to gravatar_for(user, size: 50), user %>
                                <span class="user"><%= link_to user.name, user %></span>
                            </li>
                        <% end %>
                    </ol>
        <% end %>
    </div>
</div>
